@model IEnumerable<Estudiantes.Models.Dto.Alumnos>

@{
    ViewBag.Title = "Lista de alumnos";
}

<h2>Lista de alumnos</h2>

<p>
    @Html.ActionLink("Nuevo Alumno", "Create",null, new { @class= "btn btn-primary" })
</p>
<div class="table-responsive">

     <table class="table">
         <tr>
             <th>
                 @Html.DisplayNameFor(model => model.IdAlumno)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.NombresAlumno)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.PrimerApellido)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.SegundoApellido)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.FechaNacimiento)
             </th>
             <th>
                 @Html.DisplayNameFor(model => model.AnioIngreso)
             </th>
             <th></th>
         </tr>

         @foreach (var item in Model)
         {
             <tr>
                 <td>
                     @Html.DisplayFor(modelItem => item.IdAlumno)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.NombresAlumno)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.PrimerApellido)
                 </td>

                 <td>
                     @Html.DisplayFor(modelItem => item.SegundoApellido)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.FechaNacimiento)
                 </td>
                 <td>
                     @Html.DisplayFor(modelItem => item.AnioIngreso)
                 </td>
                 <td class="btn-group" role="group">
                     @Html.ActionLink("Modificar", "Edit", new { id = item.IdAlumno }, new { @class= "btn btn-secondary btn-sm" })
                     @Html.ActionLink("Detalles", "Details", new { id = item.IdAlumno }, new { @class = "btn btn-secondary btn-sm" })
                     @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAlumno }, new { @class = "btn btn-danger btn-sm" })
                 </td>
             </tr>
         }

     </table>
</div>
